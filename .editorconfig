# editorconfig.org
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.py]
indent_size = 4

[*.md]
trim_trailing_whitespace = false
indent_style = tab

[*.html]
indent_size = 4

[*.json]
indent_size = 2
insert_final_newline = ignore

[*.txt]
indent_style = tab
